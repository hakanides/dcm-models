{
  "model_info": {
    "name": "ICLV",
    "description": "Integrated Choice and Latent Variable model - simultaneous estimation (unbiased)",
    "parameters": [
      "ASC_paid", "B_FEE", "B_DUR",
      "B_FEE_PatBlind", "B_FEE_SecDL",
      "lambda_1", "lambda_2", "lambda_3",
      "gamma_age", "gamma_edu"
    ],
    "true_values": {
      "ASC_paid": 5.0,
      "B_FEE": -0.08,
      "B_FEE_PatBlind": -0.10,
      "B_FEE_SecDL": 0.05,
      "B_DUR": -0.08
    },
    "note": "Simultaneous estimation eliminates attenuation bias"
  },
  "population": {
    "N": 100,
    "T": 5,
    "seed": 42
  },
  "design": {
    "path": "../../data/raw/scenarios_prepared.csv"
  },
  "demographics": {
    "age_idx": {
      "type": "categorical",
      "values": [0, 1, 2, 3, 4],
      "probs": [0.1, 0.35, 0.3, 0.2, 0.05],
      "center": 2.0
    },
    "edu_idx": {
      "type": "categorical",
      "values": [0, 1, 2, 3, 4, 5],
      "probs": [0.02, 0.2, 0.15, 0.45, 0.15, 0.03],
      "center": 3.0
    }
  },
  "latent": {
    "pat_blind": {
      "structural": {
        "intercept": 0.0,
        "betas": {"age_idx": 0.20},
        "sigma": 1.0
      },
      "measurement": {
        "items": ["pat_blind_1", "pat_blind_2", "pat_blind_3"],
        "loadings": [1.0, 0.85, 0.78],
        "thresholds": [-1.0, -0.35, 0.35, 1.0]
      }
    },
    "sec_dl": {
      "structural": {
        "intercept": 0.0,
        "betas": {"edu_idx": 0.18},
        "sigma": 1.0
      },
      "measurement": {
        "items": ["sec_dl_1", "sec_dl_2", "sec_dl_3"],
        "loadings": [1.0, 0.80, 0.75],
        "thresholds": [-1.0, -0.35, 0.35, 1.0]
      }
    }
  },
  "choice_model": {
    "fee_scale": 10000.0,
    "alternatives": {
      "1": {"name": "paid1", "asc": true},
      "2": {"name": "paid2", "asc": true},
      "3": {"name": "standard", "asc": false}
    },
    "base_terms": [
      {"name": "ASC_paid", "apply_to": ["paid1", "paid2"], "coef": 5.0}
    ],
    "attribute_terms": [
      {
        "name": "B_FEE",
        "attribute": "fee",
        "apply_to": ["paid1", "paid2"],
        "base_coef": -0.08,
        "interactions": [
          {"with": "pat_blind", "coef": -0.10, "type": "latent"},
          {"with": "sec_dl", "coef": 0.05, "type": "latent"}
        ]
      },
      {
        "name": "B_DUR",
        "attribute": "dur",
        "apply_to": ["paid1", "paid2", "standard"],
        "base_coef": -0.08,
        "interactions": []
      }
    ]
  },
  "estimation": {
    "n_draws": 500,
    "draw_type": "halton",
    "auto_scale": true,
    "use_two_stage_start": true
  }
}
