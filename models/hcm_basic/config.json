{
  "model_info": {
    "name": "HCM Basic (ICLV)",
    "description": "Hybrid Choice Model with single latent variable (Blind Patriotism) on fee sensitivity. Uses simultaneous ICLV estimation with structural equations.",
    "parameters": ["ASC_paid", "B_FEE", "B_FEE_PatBlind", "B_DUR", "gamma_age", "sigma_LV"],
    "true_values": {
      "ASC_paid": 5.0,
      "B_FEE": -0.08,
      "B_FEE_PatBlind": -0.10,
      "B_DUR": -0.12,
      "gamma_age": 0.20,
      "sigma_LV": 1.0
    },
    "note": "Simultaneous ICLV estimation eliminates attenuation bias. Structural equation: η = γ_age * (age - 2) + σ * ω"
  },
  "population": {
    "N": 800,
    "T": 10,
    "seed": 42,
    "_note": "N>=800 recommended for ICLV per Train (2009)"
  },
  "design": {
    "path": "../shared/data/scenarios.csv",
    "sample_with_replacement": true
  },
  "demographics": {
    "age_idx": {
      "type": "categorical",
      "values": [0, 1, 2, 3, 4],
      "probs": [0.1, 0.35, 0.3, 0.2, 0.05]
    }
  },
  "latent": {
    "pat_blind": {
      "structural": {
        "intercept": 0.0,
        "betas": {
          "age_idx": 0.20
        },
        "center": {"age_idx": 2.0},
        "sigma": 1.0
      },
      "measurement": {
        "items": ["pat_blind_1", "pat_blind_2", "pat_blind_3", "pat_blind_4", "pat_blind_5"],
        "loadings": [0.85, 0.83, 0.81, 0.79, 0.78],
        "thresholds": [-1.0, -0.35, 0.35, 1.0]
      }
    }
  },
  "choice_model": {
    "fee_scale": 10000.0,
    "alternatives": {
      "1": {"name": "paid1", "asc": true},
      "2": {"name": "paid2", "asc": true},
      "3": {"name": "standard", "asc": false}
    },
    "base_terms": [
      {
        "name": "ASC_paid",
        "apply_to": ["paid1", "paid2"],
        "coef": 5.0
      }
    ],
    "attribute_terms": [
      {
        "name": "B_FEE",
        "attribute": "fee",
        "apply_to": ["paid1", "paid2"],
        "base_coef": -0.08,
        "interactions": [
          {"with": "pat_blind", "coef": -0.10, "type": "latent"}
        ]
      },
      {
        "name": "B_DUR",
        "attribute": "dur",
        "apply_to": ["paid1", "paid2", "standard"],
        "base_coef": -0.12,
        "interactions": []
      }
    ]
  }
}
